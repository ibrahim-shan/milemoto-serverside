{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@milemoto/types": ["../packages/types/src"]
    },
    "rootDirs": [
      "src",
      "../packages/types/src" 
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}